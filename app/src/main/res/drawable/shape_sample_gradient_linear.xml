<?xml version="1.0" encoding="utf-8"?>

<!--
    本例用于演示线性渐变色
-->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!--
        gradient - 渐变
            type - linear（线性渐变）；radial（放射性渐变）；sweep（扫描线式渐变）
            startColor - 渐变色开始色值
            centerColor - 渐变色中间色值
            endColor - 渐变色结束色值
            angle - 渐变方向，仅 type 为 linear 时有效，必须为 45 的整数倍，默认值为 0
                0 代表从左到右渐变
                -90 代表从上到下渐变
     -->
    <gradient
        android:type="linear"
        android:angle="-90"
        android:startColor="#f00"
        android:endColor="#00f" />

</shape>